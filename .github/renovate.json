{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>celo-org/.github:renovate-config"
  ],
  "packageRules": [
    {
      "enabled": false,
      "groupName": "everything",
      "matchManagers": [
        "gomod",
        "dockerfile",
        "docker-compose",
        "npm"
      ],
      "separateMajorMinor": false,
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
